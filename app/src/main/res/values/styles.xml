<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorControlNormal">#ffffff</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="PlayerSheet">
        <item name="android:windowEnterTransition">@transition/dribbble_player_sheet_enter</item>
        <item name="android:windowReturnTransition">@transition/dribbble_player_sheet_return</item>
    </style>

    <style name="toolbar" parent="AppTheme">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:elevation">4dp</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="loading_btn">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="rv_cornerRadius">6dp</item>
        <item name="rv_textSize">16</item>
        <item name="rv_textColor">@color/white</item>
        <item name="rv_textPressColor">@color/white</item>
        <item name="rv_backgroundColor">@color/theme_color</item>
        <item name="rv_backgroundPressColor">@color/theme_color_pressed</item>
    </style>

    <!--首页布局-->

    <style name="user_ig_in_history">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
    </style>

    <style name="rl_in_history">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="user_name_in_history">
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="content_in_history">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/history_margin</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="add_top_text">
        <item name="android:textColor">@color/color_5</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="comment_in_history">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--首页布局-->

</resources>
