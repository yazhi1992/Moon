<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tool="http://schemas.android.com/tools">

    <com.yazhi1992.yazhilib.widget.RoundView.RoundRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        app:rv_backgroundPressColor="@color/white_pressed"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/ig_user"
            android:layout_marginTop="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tool:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/gray"
            android:layout_alignTop="@+id/ig_user"
            android:layout_toRightOf="@+id/ig_user"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加了纪念日"
            android:layout_below="@+id/tv_name"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/ig_user"
            android:layout_marginTop="@dimen/history_margin"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            />

       <com.yazhi1992.yazhilib.widget.RoundView.RoundTextView
           android:id="@+id/tv_memorial_day_title"
           android:layout_below="@+id/tv_type"
           android:layout_alignLeft="@+id/tv_type"
           android:layout_marginTop="@dimen/history_margin"
           app:rv_cornerRadius="5dp"
           app:rv_strokeWidth="1dp"
           app:rv_strokeColor="@color/theme_color"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:paddingTop="5dp"
           android:paddingBottom="5dp"
           android:textColor="@color/gray"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_memorial_day_title"
            android:layout_below="@+id/tv_memorial_day_title"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:text=""
            />

    </com.yazhi1992.yazhilib.widget.RoundView.RoundRelativeLayout>
</layout>
