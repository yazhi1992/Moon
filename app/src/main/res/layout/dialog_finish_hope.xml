<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.yazhi1992.yazhilib.widget.RoundView.RoundRelativeLayout
            app:rv_backgroundColor="@color/white"
            app:rv_cornerRadius="6dp"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.yazhi1992.yazhilib.widget.RoundView.RoundRelativeLayout
                android:id="@+id/rl_input"
                app:rv_strokeWidth="1dp"
                app:rv_strokeColor="@color/color_d"
                app:rv_cornerRadius="6dp"
                android:layout_width="250dp"
                android:layout_height="80dp">

                <EditText
                    android:id="@+id/et_input"
                    android:textSize="14sp"
                    android:gravity="left|top"
                    android:padding="10dp"
                    android:lineSpacingExtra="3dp"
                    android:hint="@string/finish_hope_hint"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </com.yazhi1992.yazhilib.widget.RoundView.RoundRelativeLayout>

            <com.yazhi1992.yazhilib.widget.RoundView.RoundLoadingView
                android:id="@+id/btn_finish"
                android:layout_below="@+id/rl_input"
                app:rv_text="@string/finish_hope_btn"
                style="@style/loading_btn"
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"></com.yazhi1992.yazhilib.widget.RoundView.RoundLoadingView>

        </com.yazhi1992.yazhilib.widget.RoundView.RoundRelativeLayout>

    </android.support.constraint.ConstraintLayout>
</layout>
