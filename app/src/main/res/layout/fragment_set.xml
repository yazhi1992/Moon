<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="com.yazhi1992.moon.ui.home.set.SetViewModel"></variable>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/theme_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/toolbar"
                app:title="我们"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.Toolbar>

        </RelativeLayout>

        <ImageView
            android:id="@+id/ig_me"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            app:url="@{item.myHeadUrl}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ig_lover"
            app:layout_constraintTop_toBottomOf="@+id/rl_top"/>

        <ImageView
            android:id="@+id/ig_lover"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/ig_me"
            app:layout_constraintTop_toTopOf="@+id/ig_me"
            app:url="@{item.loverHeadUrl}"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ig_me"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_lover"
            app:layout_constraintTop_toBottomOf="@+id/ig_me"
            android:text="@{item.myName}"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_lover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ig_me"
            android:gravity="center"
            android:padding="15dp"
            android:text="@{item.loverName}"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_name"
            app:layout_constraintTop_toTopOf="@+id/tv_name"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:layout_marginBottom="8dp"
            android:text="退出登录"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="15dp"/>

        <Button
            android:id="@+id/btn_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginBottom="8dp"
            android:text="关于我们"
            app:layout_constraintBottom_toTopOf="@+id/btn_logout"
            tools:layout_editor_absoluteX="15dp"/>

        <Button
            android:id="@+id/btn_memorial_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginBottom="8dp"
            android:text="纪念日列表"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/btn_about_us"
            tools:layout_editor_absoluteX="15dp"/>

        <Button
            android:id="@+id/btn_hope_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_logout"
            android:layout_margin="15dp"
            android:layout_marginBottom="8dp"
            android:text="心愿列表"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/btn_memorial_day"
            tools:layout_editor_absoluteX="15dp"/>

    </android.support.constraint.ConstraintLayout>
</layout>
