<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.yazhi1992.yazhilib.widget.RoundView.RoundRelativeLayout
            app:rv_cornerRadius="10dp"
            app:rv_backgroundColor="@color/white"
            android:layout_width="250dp"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/bind_dialog_cardView"
                app:cardCornerRadius="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_width="60dp"
                android:layout_height="60dp">

                <ImageView
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/bind_lover_name"
                android:layout_below="@+id/bind_dialog_cardView"
                android:layout_marginTop="10dp"
                tools:text="测试名字"
                android:textColor="@color/black"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bind_lover_text"
                android:layout_below="@+id/bind_lover_name"
                android:layout_marginTop="5dp"
                android:text="@string/bind_lover_dialog_text"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/bind_lover_dialog_line"
                android:layout_below="@+id/bind_lover_text"
                android:layout_marginTop="30dp"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>

            <LinearLayout
                android:layout_below="@+id/bind_lover_dialog_line"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <com.yazhi1992.yazhilib.widget.RoundView.RoundTextView
                    android:id="@+id/bind_lover_dialog_cancel"
                    android:layout_weight="1"
                    android:text="@string/bind_lover_dialog_cancel"
                    app:rv_cornerRadius_BL="10dp"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    app:rv_backgroundPressColor="@color/white_pressed"
                    android:layout_height="match_parent"/>

                <View
                    android:background="@color/line"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"></View>

                <com.yazhi1992.yazhilib.widget.RoundView.RoundTextView
                    android:id="@+id/bind_lover_dialog_recieve"
                    android:layout_weight="1"
                    android:text="@string/bind_lover_dialog_recieve"
                    app:rv_cornerRadius_BR="10dp"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    app:rv_backgroundPressColor="@color/white_pressed"
                    android:textColor="@color/theme_color"
                    android:layout_height="match_parent"/>

            </LinearLayout>


        </com.yazhi1992.yazhilib.widget.RoundView.RoundRelativeLayout>

    </android.support.constraint.ConstraintLayout>
</layout>


